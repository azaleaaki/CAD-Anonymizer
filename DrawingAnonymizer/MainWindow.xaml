<Window x:Class="MetMashAnonymizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="МетМаш Blueprint Anonymizer"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        FontFamily="Segoe UI"
        Height="2700" Width="1600"
        Icon="/Resources/metmash.jpg">

    <Window.Resources>
        <!-- Стили -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#d4af37"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#c09a2f"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e8e8e8"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d0d0d0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#1a1a1a" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#d4af37" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Color="#000000" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-5"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="30" Color="#d4af37" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StepIcon" TargetType="Border">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#1a1a1a" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#d4af37" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="40"/>
        </Style>

        <Style x:Key="FormCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#1a1a1a" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#d4af37" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Color="#000000" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UploadArea" TargetType="Border">
            <Setter Property="BorderBrush" Value="#e8e8e8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#d4af37"/>
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#d4af37" Opacity="0.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PreviewBox" TargetType="Border">
            <Setter Property="BorderBrush" Value="#e8e8e8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#252525"/>
        </Style>

        <!-- Path геометрии для иконок -->
        <Geometry x:Key="LogoIcon">M8,8 L24,8 M8,24 L24,24 M8,16 L24,16 M16,8 L16,24 M12,12 L20,12 M12,20 L20,20 M12,16 L20,16</Geometry>
        <Geometry x:Key="DocumentIcon">M6,2C4.9,2 4,2.9 4,4V20C4,21.1 4.9,22 6,22H18C19.1,22 20,21.1 20,20V8L14,2H6Z M18,20H6V4H13V9H18V20Z</Geometry>
        <Geometry x:Key="DetectionIcon">M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4Z M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6Z M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z</Geometry>
        <Geometry x:Key="CleanIcon">M6,2C4.9,2 4,2.9 4,4V20C4,21.1 4.9,22 6,22H18C19.1,22 20,21.1 20,20V8L14,2H6Z M18,20H6V4H13V9H18V20Z M12,12L16,16L12,20V12Z M8,12V20L12,16L8,12Z</Geometry>

        <!-- Стиль для элемента лога -->
        <Style x:Key="LogItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Фоновый паттерн -->
        <Rectangle>
            <Rectangle.Fill>
                <VisualBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute">
                    <VisualBrush.Visual>
                        <Canvas Width="40" Height="40">
                            <Line X1="0" Y1="0" X2="40" Y2="40" Stroke="#00a676" StrokeThickness="0.5" Opacity="0.03"/>
                            <Line X1="40" Y1="0" X2="0" Y2="40" Stroke="#00a676" StrokeThickness="0.5" Opacity="0.03"/>
                        </Canvas>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Основная структура -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Хедер -->
            <Border Grid.Row="0" Height="70">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0" Color="#1a1a1a"/>
                        <GradientStop Offset="1" Color="#2d2d2d"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <BlurEffect Radius="20"/>
                </Border.Effect>
                <Grid Margin="60,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Логотип -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Viewbox Width="32" Height="32" Margin="0,0,12,0">
                            <Path Data="{StaticResource LogoIcon}" Stroke="#d4af37" StrokeThickness="2"/>
                        </Viewbox>
                        <StackPanel>
                            <TextBlock Text="МетМаш" FontSize="20" FontWeight="SemiBold" Foreground="#d4af37"/>
                            <TextBlock Text="Blueprint Anonymizer" FontSize="12" Foreground="#b0b0b0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- API Docs ссылка -->
                    <TextBlock Grid.Column="2" Text="API Docs" Foreground="#b0b0b0" 
                               VerticalAlignment="Center" FontSize="14" Cursor="Hand">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#d4af37"/>
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Cursor="">
                    <!-- Hero секция -->
                    <Border Height="500">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#1a1a1a"/>
                                <GradientStop Offset="1" Color="#2d2d2d"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                        Width="800">
                                <TextBlock Text="Анонимизируй чертежи за 8 секунд" 
                                           FontSize="56" FontWeight="Bold" Foreground="White"
                                           TextWrapping="Wrap" Margin="0,0,0,24"
                                           HorizontalAlignment="Center" TextAlignment="Center"/>

                                <TextBlock Text="AI удаляет штампы, ФИО, компанию из CAD-PDF. ГОСТ/JIS. Без следов." 
                                           FontSize="20" Foreground="#b0b0b0" 
                                           TextWrapping="Wrap" Margin="0,0,0,40"
                                           HorizontalAlignment="Center" TextAlignment="Center"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    <Button x:Name="UploadButton" Content="ЗАГРУЗИ PDF" 
                                            Click="SelectPdfButton_Click"
                                            Style="{StaticResource PrimaryButton}"
                                            Width="180" Height="50" Margin="0,0,24,0"/>

                                    <Button Content="API ДЕМО" 
                                            Style="{StaticResource SecondaryButton}"
                                            Width="180" Height="50"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Pipeline секция -->
                    <Border Background="#1a1a1a" Padding="60,80,60,80">
                        <StackPanel>
                            <TextBlock Text="Как это работает" FontSize="36" FontWeight="Bold" 
                                       Foreground="#0d47a1" HorizontalAlignment="Center" Margin="0,0,0,48"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                        VerticalAlignment="Center">

                                <!-- Шаг 1 -->
                                <StackPanel Width="200" HorizontalAlignment="Center" Margin="0,0,32,0">
                                    <Border Style="{StaticResource StepIcon}">
                                        <Viewbox Width="40" Height="40">
                                            <Path Data="{StaticResource DocumentIcon}" Stroke="#d4af37" StrokeThickness="1.5"/>
                                        </Viewbox>
                                    </Border>
                                    <TextBlock Text="PDF" FontSize="20" FontWeight="SemiBold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,24,0,12"/>
                                    <TextBlock Text="Загрузите чертеж в формате PDF" 
                                               FontSize="16" Foreground="#b0b0b0" 
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Text="→" FontSize="24" Foreground="#d4af37" 
                                           VerticalAlignment="Center" Margin="0,0,32,0"/>

                                <!-- Шаг 2 -->
                                <StackPanel Width="200" HorizontalAlignment="Center" Margin="0,0,32,0">
                                    <Border Style="{StaticResource StepIcon}">
                                        <Viewbox Width="40" Height="40">
                                            <Path Data="{StaticResource DetectionIcon}" Stroke="#d4af37" StrokeThickness="1.5"/>
                                        </Viewbox>
                                    </Border>
                                    <TextBlock Text="AI Детекция" FontSize="20" FontWeight="SemiBold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,24,0,12"/>
                                    <TextBlock Text="Нейросеть находит и маскирует конфиденциальные данные" 
                                               FontSize="16" Foreground="#b0b0b0" 
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>

                                <TextBlock Text="→" FontSize="24" Foreground="#d4af37" 
                                           VerticalAlignment="Center" Margin="0,0,32,0"/>

                                <!-- Шаг 3 -->
                                <StackPanel Width="200" HorizontalAlignment="Center">
                                    <Border Style="{StaticResource StepIcon}">
                                        <Viewbox Width="40" Height="40">
                                            <Path Data="{StaticResource CleanIcon}" Stroke="#d4af37" StrokeThickness="1.5">
                                                <Path.Fill>
                                                    <SolidColorBrush Color="#00a676"/>
                                                </Path.Fill>
                                            </Path>
                                        </Viewbox>
                                    </Border>
                                    <TextBlock Text="Clean PDF" FontSize="20" FontWeight="SemiBold" 
                                               Foreground="White" HorizontalAlignment="Center" Margin="0,24,0,12"/>
                                    <TextBlock Text="Скачайте анонимизированный чертеж" 
                                               FontSize="16" Foreground="#b0b0b0" 
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>



                    <!-- Форма секция -->
                    <Border Padding="60,80,60,80">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#1a1a1a"/>
                                <GradientStop Offset="1" Color="#2d2d2d"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <StackPanel Width="800" HorizontalAlignment="Center">
                                <TextBlock Text="Анонимизировать чертеж" FontSize="32" FontWeight="Bold" 
                                           Foreground="#0d47a1" HorizontalAlignment="Center" Margin="0,0,0,48"/>

                                <Border Style="{StaticResource FormCard}">
                                    <StackPanel>
                                        <!-- Формат чертежа -->
                                        <StackPanel Margin="0,0,0,24">
                                            <TextBlock Text="Формат чертежа" FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="White"/>
                                            <TextBlock Text="Выберите стандартный размер чертежа для оптимальной обработки" 
                                                       FontSize="14" Foreground="#b0b0b0" Margin="0,4,0,8"/>

                                            <ComboBox x:Name="FormatComboBox" Height="40" Background="#282828"
                                                      BorderBrush="#e8e8e8" BorderThickness="1"
                                                      Foreground="Black" FontSize="14" Padding="8">
                                                <ComboBoxItem Content="A4 (210 × 297 мм)" IsSelected="True"/>
                                                <ComboBoxItem Content="A3 (297 × 420 мм)"/>
                                                <ComboBoxItem Content="A2 (420 × 594 мм)"/>
                                                <ComboBoxItem Content="A1 (594 × 841 мм)"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Элементы для анонимизации -->
                                        <StackPanel Margin="0,0,0,24">
                                            <TextBlock Text="Элементы для анонимизации" FontSize="16" FontWeight="SemiBold" 
                                                       Foreground="White"/>
                                            <TextBlock Text="Выберите конфиденциальные данные, которые необходимо удалить" 
                                                       FontSize="14" Foreground="#b0b0b0" Margin="0,4,0,8"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <CheckBox x:Name="NumerationCheckBox" Grid.Column="0" Grid.Row="0"
                                                          Content="Нумерация" IsChecked="True"
                                                          Foreground="White" FontWeight="Medium" Margin="0,8"/>

                                                <CheckBox x:Name="DevelopersCheckBox" Grid.Column="1" Grid.Row="0"
                                                          Content="ФИО разработчиков" IsChecked="True"
                                                          Foreground="White" FontWeight="Medium" Margin="0,8"/>

                                                <CheckBox x:Name="CompanyCheckBox" Grid.Column="0" Grid.Row="1"
                                                          Content="Штамп компании" IsChecked="True"
                                                          Foreground="White" FontWeight="Medium" Margin="0,8"/>

                                                <CheckBox x:Name="CreatorCheckBox" Grid.Column="1" Grid.Row="1"
                                                          Content="Создатель документа" IsChecked="True"
                                                          Foreground="White" FontWeight="Medium" Margin="0,8"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Область загрузки -->
                                        <!--<Border x:Name="UploadAreaBorder"
                                                Style="{StaticResource UploadArea}" 
                                                Height="200" 
                                                Margin="0,0,0,24"
                                                AllowDrop="True" 
                                                Drop="UploadArea_Drop" 
                                                DragOver="UploadArea_DragOver">     
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="📁" FontSize="48" Foreground="#d4af37" Margin="0,0,0,16" Width="61"/>
                                                <TextBlock Text="Перетащите PDF файлы сюда" 
                   FontSize="16" Foreground="#b0b0b0"/>
                                                <TextBlock Text="или нажмите для выбора" 
                   FontSize="16" Foreground="#b0b0b0"/>
                                            </StackPanel>
                                        </Border>-->

                                        <TextBlock Text="Поддерживается пакетная загрузка до 50 файлов (150-600 DPI)" 
                                                   FontSize="14" Foreground="#b0b0b0" HorizontalAlignment="Center" Margin="0,0,0,24"/>

                                        <!-- Вкладки с предпросмотром PDF -->

                                        <Grid  Margin="0,0,0,24" Height="400">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Панель навигации -->
                                            <Border Grid.Row="0" Background="#2d2d2d" Padding="10" CornerRadius="8,8,0,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button x:Name="FirstPageButton" Content="⏮" Width="40" Height="30" 
                                                                    Style="{StaticResource SecondaryButton}" Margin="0,0,5,0"/>
                                                    <Button x:Name="PrevPageButton" Content="◄" Width="40" Height="30" 
                                                                    Style="{StaticResource SecondaryButton}" Margin="0,0,5,0"/>

                                                    <TextBlock Text="Страница" VerticalAlignment="Center" 
                                                                       Foreground="White" Margin="10,0,5,0"/>
                                                    <TextBox x:Name="PageNumberTextBox" Width="50" Height="30" 
                                                                     Text="1" TextAlignment="Center" VerticalContentAlignment="Center"
                                                                     Background="#252525" Foreground="White" BorderThickness="1" 
                                                                     BorderBrush="#e8e8e8"/>
                                                    <TextBlock Text="/" VerticalAlignment="Center" 
                                                                       Foreground="White" Margin="5,0,5,0"/>
                                                    <TextBlock x:Name="TotalPagesTextBlock" Text="1" 
                                                                       VerticalAlignment="Center" Foreground="White" Width="30"/>

                                                    <Button x:Name="NextPageButton" Content="►" Width="40" Height="30" 
                                                                    Style="{StaticResource SecondaryButton}" Margin="5,0,5,0"/>
                                                    <Button x:Name="LastPageButton" Content="⏭" Width="40" Height="30" 
                                                                    Style="{StaticResource SecondaryButton}" Margin="0,0,5,0"/>

                                                    <TextBlock Text="Масштаб:" VerticalAlignment="Center" 
                                                                       Foreground="White" Margin="20,0,5,0"/>
                                                    <ComboBox x:Name="ZoomComboBox" Width="100" Height="30" SelectedIndex="2">
                                                        <ComboBoxItem Content="50%"/>
                                                        <ComboBoxItem Content="75%"/>
                                                        <ComboBoxItem Content="100%"/>
                                                        <ComboBoxItem Content="150%"/>
                                                        <ComboBoxItem Content="200%"/>
                                                    </ComboBox>
                                                </StackPanel>
                                            </Border>

                                            <!-- Область предпросмотра PDF -->
                                            <Border Grid.Row="1" BorderBrush="#e8e8e8" BorderThickness="1" 
                                                            Background="#f0f0f0" Margin="0,1,0,0">
                                                <ScrollViewer x:Name="PdfScrollViewer" 
                                                                      HorizontalScrollBarVisibility="Auto" 
                                                                      VerticalScrollBarVisibility="Auto">
                                                    <Grid>
                                                        <Border x:Name="PdfContainer" Background="White" 
                                                                        BorderBrush="#cccccc" BorderThickness="1"
                                                                        CornerRadius="4" Margin="20">
                                                            <Canvas x:Name="PdfCanvas" Width="800" Height="1130">
                                                                <!-- Здесь будет отображаться PDF -->
                                                                <Rectangle Width="800" Height="1130" Fill="#f8f8f8" 
                                                                                   Stroke="#cccccc" StrokeThickness="1"/>
                                                                <TextBlock Text="PDF предпросмотр" 
                                                                                   HorizontalAlignment="Left" 
                                                                                   VerticalAlignment="Top"
                                                                                   Foreground="#666666" FontSize="16" Canvas.Left="265" Canvas.Top="106"/>
                                                            </Canvas>
                                                        </Border>

                                                        <!-- Индикатор загрузки -->
                                                        <Border x:Name="LoadingIndicator" Background="#80000000" 
                                                                        CornerRadius="8" Visibility="Collapsed"
                                                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                        Padding="20">
                                                            <StackPanel>
                                                                <ProgressBar IsIndeterminate="True" Width="100" Height="10" 
                                                                                     Foreground="#d4af37" Margin="0,0,0,10"/>
                                                                <TextBlock Text="Загрузка PDF..." Foreground="White" 
                                                                                   FontSize="14" HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </ScrollViewer>
                                            </Border>

                                            <!-- Информация о странице -->
                                            <Border Grid.Row="2" Background="#2d2d2d" Padding="10" CornerRadius="0,0,8,8">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="Размер: 210 × 297 мм (A4)" Foreground="#b0b0b0" 
                                                                       Margin="0,0,20,0"/>
                                                    <TextBlock Text="DPI: 300" Foreground="#b0b0b0" Margin="0,0,20,0"/>
                                                    <TextBlock Text="Формат: PDF 1.7" Foreground="#b0b0b0"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>


                                        <!-- Прогресс бар -->
                                        <Border Height="8" Background="#e8e8e8" CornerRadius="4" Margin="0,0,0,24">
                                            <Border x:Name="ProgressBar" Background="#00a676" 
                                                    CornerRadius="4" Width="0"/>
                                        </Border>

                                        <!-- Кнопка анонимизации -->
                                        <Button x:Name="AnonymizeButton" Content="АНОНИМИЗИРОВАТЬ" 
                                                Style="{StaticResource PrimaryButton}"
                                                Click="AnonymizeButton_Click"
                                                Height="50"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Панель состояния -->
                    <StatusBar Grid.Row="2" Background="#1a1a1a" Height="30" VerticalAlignment="Bottom">
                        <StatusBar.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </StatusBar.ItemsPanel>

                        <!-- Текущий статус -->
                        <StatusBarItem Grid.Column="0">
