                            </StackPanel>
                        </StatusBarItem>

                        <!-- Информация о файлах -->
                        <StatusBarItem Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Margin="10,0">
                                <TextBlock Text="Файлов:" Foreground="#b0b0b0" Margin="0,0,5,0"/>
