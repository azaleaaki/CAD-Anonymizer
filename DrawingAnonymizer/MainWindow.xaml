                                       Foreground="#d4af37" Margin="0,0,0,24" Width="221"/>

                            <TextBlock Text="support@metmash.info | +7 (343) XXX-XX-XX" 
                                       FontSize="16" Foreground="#b0b0b0" Margin="0,0,0,24"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="GDPR" FontSize="14" Foreground="#b0b0b0" Margin="0,0,24,0"/>
                                <TextBlock Text="ISO 27001" FontSize="14" Foreground="#b0b0b0" Margin="0,0,24,0"/>
                                <TextBlock Text="ГОСТ Р 7.0.97-2016" FontSize="14" Foreground="#b0b0b0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
