                       FontWeight="Bold" Margin="0,0,15,0"/>

                                <TextBlock Text="Обработано:" Foreground="#b0b0b0" Margin="0,0,5,0"/>
                                <TextBlock x:Name="ProcessedCountTextBlock" Text="0" Foreground="#00a676" 
                       FontWeight="Bold" Margin="0,0,15,0"/>
                            </StackPanel>
                        </StatusBarItem>

                        <!-- Прогресс -->
                        <StatusBarItem Grid.Column="2">
                            <StackPanel Orientation="Horizontal" Margin="10,0">
                                <TextBlock Text="Прогресс:" Foreground="#b0b0b0" Margin="0,0,5,0"/>
                                <ProgressBar x:Name="OverallProgressBar" Width="100" Height="10" 
                         Foreground="#d4af37" Background="#252525" 
                         Value="0" Maximum="100"/>
                                <TextBlock x:Name="ProgressPercentageTextBlock" Text="0%" 
                       Foreground="#b0b0b0" Margin="5,0,0,0" Width="30"/>
                            </StackPanel>
                        </StatusBarItem>
                    </StatusBar>

